%ul.nav.nav-tabs
  %li
    %a{:href => "#alloc", :data =>{:toggle => 'tab'}}
      = "Allocations (#{@funding_line_item.funding_requests.count})"
  %li
    %a{:href => "#comm", :data =>{:toggle => 'tab'}}
      = "Comments (#{@funding_line_item.comments.count})"

.tab-content
  .tab-pane.fade#alloc
    .tab-content
      - if @funding_line_item.funding_requests.empty?
        %p There are no projects that use this fund.
      - else
        = render :partial => 'funding_requests/index_table', :locals => {:funding_requests => @funding_line_item.funding_requests}
  .tab-pane.fade#comm
    .tab-content
      = render 'comments'
