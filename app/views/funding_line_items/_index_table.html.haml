%table.table.table-hover#datatable
  %thead
    %tr
      %th.left Agency
      %th.left Fund
      %th.center FY
      %th.left FPN
      %th.center Awarded
      %th.center Active

      %th.center Type
      %th.right Amount
      %th.right Pcnt Op.
      %th.right Amount Op.
      %th.right Committed
      %th.right Available
      
      %th.center

  %tbody
    - total = 0
    - operating = 0
    - committed = 0
    - available = 0

    - @funding_line_items.each do |f|
      - total += f.amount
      - operating += f.operating_funds
      - committed += f.committed
      - available += f.available

      %tr.popup-details{:data => {:action_path => funding_line_item_path(f)}}
        %td= f.organization
        %td= f.funding_source
        %td.center= f.fiscal_year
        %td.left= f.federal_project_number
        %td.center= format_as_boolean(f.awarded)
        %td.center= format_as_boolean(f.active)
        
        %td.center= f.funding_line_item_type.code
        %td.right= format_as_currency(f.amount)
        %td.right= format_as_percentage(f.pcnt_operating_assistance)
        %td.right= format_as_currency(f.operating_funds)
        %td.right= format_as_currency(f.committed)
        %td.right= format_as_currency(f.available)
               
        %td.center
          %i.fa.fa-info-circle.text-info.popup-details{:data => {:title => "#{f.federal_project_number}: Activity Line Items"}}

  %tfoot
    %tr
      %td{:colspan => 7}
      %td.right= format_as_currency(total)
      %td.right
      %td.right= format_as_currency(operating)
      %td.right= format_as_currency(committed)
      %td.right= format_as_currency(available)

= render 'shared/datatable_javascript'

:javascript
  $('.popup-details').popover({
    trigger: 'hover',
    container: 'body',
    placement: 'left',
    animation: 'true',
    html: 'true'
  });
