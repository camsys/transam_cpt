.row
  = simple_form_for(@funding_source,
    :html => {:class => 'form-horizontal' },
    :wrapper => :horizontal_form,
    :wrapper_mappings => {:check_boxes => :horizontal_radio_and_checkboxes, :radio_buttons => :horizontal_radio_and_checkboxes, :file => :horizontal_file_input, :boolean => :horizontal_boolean}) do |f|
    .col-md-4
      = dialog_tag('Fund Details', {:icon => 'fa fa-book', :class => "header_part"}) do
        = f.input :name, :placeholder => "Enter a name for this fund..."
        = f.association :funding_source_type
        = f.input :external_id, :label => 'dotGrants ID'
        = f.input :description, :input_html => { :rows => 6 }, :placeholder => "Enter a description for this fund..."
    
    .col-md-4
      = dialog_tag('Type', {:icon => 'fa fa-book', :class => "header_part"}) do
        = f.input :state_administered_federal_fund
        = f.input :bond_fund
        = f.input :formula_fund
        = f.input :non_committed_fund
        = f.input :contracted_fund
        = f.input :discretionary_fund

    .col-md-4
      = dialog_tag('Rules', {:icon => 'fa fa-book', :class => "header_part"}) do
        = f.input :state_match_required
        = f.input :federal_match_required
        = f.input :local_match_required

        = f.input :rural_providers
        = f.input :urban_providers
        = f.input :shared_rider_providers
        = f.input :inter_city_bus_providers
        = f.input :inter_city_rail_providers
        
    .col-md-12
      = f.button :submit, :class => "btn btn-primary"

