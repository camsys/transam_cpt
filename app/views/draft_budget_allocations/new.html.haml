.col-md-3
.col-md-6
  =simple_form_for(@draft_budget_allocation) do |f|
    =f.input :amount, input_html: {value: 0}
    =f.input :draft_budget_id, collection: @draft_budgets.collect { |o| [o.name, o.id] }, include_blank: false
    =f.input :draft_funding_request_id, as: :hidden
    =f.submit 'Save', class: 'btn btn-primary'