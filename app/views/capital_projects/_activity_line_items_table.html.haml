.row
  .col-md-12
    - if @project.activity_line_items.empty?
      %p There are no activity line items for this project.
      = link_to "Add an activity line item", "#", :class => "btn btn-primary"  
    -else
      %table.table.table-condensed.table-striped.table-hover.table-bordered#datatable{:width => "100%"}
        %thead
          %tr
            %th Owning Agency
            %th Project
            %th Scope
            %th Category
            %th Title				
            %th Status				
            %th Created
            %th Last Updated
        %tbody
          - @project.activity_line_items.each do |ali|
            %tr{:data-action-path => '#{capital_project_path(ali)}'}
              %td.left= p.organization
              %td.left= p.project_number
              %td.center= p.team_category
              %td.left= p.title
              %td.left= p.capital_project_status_type
              %td.right= format_as_date_time(p.created_at)
              %td.right= format_as_date_time(p.updated_at)
      
      
      = render 'shared/datatable_javascript'
