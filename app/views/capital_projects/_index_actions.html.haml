.btn-group.pull-right.panel-action
  %button.btn.btn-primary.btn-sm.dropdown-toggle{:data => {:toggle => 'dropdown'}}
    I want to  
    %span.caret
  %ul.dropdown-menu{:role => 'menu'}
    %li
      = link_to capital_projects_path(:capital_project_type_id => @capital_project_type_id, :org_id => @org_filter, :fiscal_year => @fiscal_year, :status_type_id => @status_type_id, :start_row => 0, :format => 'xls') do
        %i.fa.fa-fw.fa-file-excel-o
        = " Export list to Excel"

= form_tag capital_projects_path, :id => 'filter_form', :method => "get", :class => 'navbar-form navbar-right panel-action' do
  - if @organization_list.count > 1
    .form-group
      = select_tag(:org_id, options_for_select(Organization.where('id IN (?)', @organization_list).collect{|a| [a.coded_name, a.id]}, :selected => @org_filter), :class => "form-control", :style => "width: 200px;", :prompt => "Any organization...")
  .form-group
    = select_tag(:fiscal_year, options_for_select(@fiscal_years, :selected => @fiscal_year), :class => "form-control", :style => "width: 100px;", :prompt => "Any FY...")
  .form-group
    = select_tag(:capital_project_state, options_for_select(CapitalProject.state_names.collect{|a| [a.humanize, a]}, :selected => @capital_project_state), :class => "form-control", :prompt => "Any status...")
  .form-group
    = select_tag(:capital_project_type_id, options_for_select(CapitalProjectType.all.collect{|a| [a.name, a.id]}, :selected => @capital_project_type_id), :class => "form-control", :prompt => "Any project type...")
  .form-group
    = select_tag(:funding_source_id, option_groups_from_collection_for_select(FundingSourceType.all, :funding_sources, :name, :id, :name, :selected => @funding_source_id), :class => "form-control", :prompt => "Any funding source...")
  .form-group
    = select_tag(:asset_subtype_id, option_groups_from_collection_for_select(AssetType.all, :asset_subtypes, :name, :id, :name, :selected => @asset_subtype_id), :class => "form-control", :prompt => "Any asset type...")

:javascript
  $(document).ready(function() {

    $('#fiscal_year, #capital_project_state, #capital_project_type_id, #org_id, #funding_source_id, #asset_subtype_id').change(function() {
      $('#filter_form').submit();
    });
    
  });
  