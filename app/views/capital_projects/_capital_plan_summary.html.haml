:css
  .well-sm {
    background-color: #4e95f4 !important;
    color: #FFF;
  }


.table-responsive
  %table.table.table-condensed#plan-summary-table
    %thead
      %tr
        - costs_by_year = sum_projects_cost_by_year(@projects)
        - @years.each do |year|
          %th.col-sm-1.center.nowrap
            = format_as_fiscal_year(year)
            <br/>
            .well.well-sm.bold= format_as_currency(costs_by_year[year])
    %tbody
