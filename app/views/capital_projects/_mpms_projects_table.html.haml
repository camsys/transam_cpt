.row
  .col-md-12
    - if @project.mpms_projects.empty?
      %p There are no MPMS projects associated with this project.
      - if can? :update, @project
        = link_to "Add a MPMS Project Number", "#", :class => "btn btn-primary"  
    -else
      %table.table.table-condensed.table-striped.table-hover.table-bordered#datatable{:width => "100%"}
        %thead
          %tr
            %th MPMS Project Number
            %th Description
        %tbody
          - @project.mpms_projects.each do |m|
            %tr{:data-action-path => '#{capital_project_path(m)}'}
              %td= m.name
              %td= m.description
      
      
      = render 'shared/datatable_javascript'
