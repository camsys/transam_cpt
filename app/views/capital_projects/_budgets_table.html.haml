%table.table
  %thead
    %tr
      - @budget_data[:labels].each_with_index do |col, col_index|
        - if col_index == 0 
          %th.left= col
        - else
          %th.right.nowrap= col

  %tbody
    - @budget_data[:data].each_with_index do |row, row_index|
      - if row_index < 2
        %tr
          - row.each_with_index do |col, col_index|
            - if col_index == 0
              %td.left= col
            - else
              %td.right= format_as_currency(col)
  %tfoot
    %tr
      - @budget_data[:data][2].each_with_index do |col, col_index|            
        - if col_index == 0
          %td.left= col
        - else
          %td.right= format_as_currency(col)
