%table.table
  %thead
    %tr
      - @budget_data[:labels].each_with_index do |col, col_index|
        - if col_index == 0 
          %th.left= col
        - else
          %th.right.nowrap= col

  %tbody
    %tr
      - @budget_data[:data][0].each_with_index do |col, col_index|
        - if col_index == 0
          %td.left= col
        - else
          %td.right= format_as_currency(col)
