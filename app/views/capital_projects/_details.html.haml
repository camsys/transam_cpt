%ul.nav.nav-tabs
  %li
    %a{:href => "#alis", :data =>{:toggle => 'tab'}}
      %span.badge.pull-right= @project.activity_line_items.count
      = "Activity Line Items "
  %li
    %a{:href => "#mpms", :data =>{:toggle => 'tab'}}
      %span.badge.pull-right= @project.mpms_projects.count
      = "MPMS Projects "
  %li
    %a{:href => "#comm", :data =>{:toggle => 'tab'}}
      %span.badge.pull-right= @project.comments.count
      = "Comments "
  %li
    %a{:href => "#docs", :data =>{:toggle => 'tab'}}
      %span.badge.pull-right= @project.documents.count
      = "Supporting Documents "

.tab-content
  .tab-pane.fade#alis
    .tab-content
      = render 'activity_line_items'
  .tab-pane.fade#mpms
    .tab-content
      = render 'mpms_projects_table'
  .tab-pane.fade#comm
    .tab-content
      = render 'comments'
  .tab-pane.fade#docs
    .tab-content
      = render 'documents'
