.row
  .col-md-12
    - if @project.history.empty?
      %p There are no workflow events associated with this project.
    -else
      %table.table.table-condensed.table-striped.table-hover.table-bordered#datatable{:width => "100%"}
        %thead
          %tr
            %th Date
            %th Event
            %th User
        %tbody
          - @project.history.each do |wfe|
            %tr
              %td= format_as_date_time(wfe.created_at)
              %td= wfe.event_type.humanize
              %td= wfe.creator.name
      
      
      = render 'shared/datatable_javascript'
