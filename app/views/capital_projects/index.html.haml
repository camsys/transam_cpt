.row
  .col-md-12
    .panel.panel-default.header-part
      .panel-heading
        .row
          .col-md-3
            %h3.panel-title
              %i.fa.fa-cubes
              Capital Projects
          .col-md-9
            = render 'index_actions'
      .panel-body
        - if @projects.empty?
          %p No matching capital projects found
        - else
          %ul.nav.nav-tabs
            %li
              %a{:href => "#summary", :data =>{:toggle => 'tab'}}
                = "Plan Summary"
            %li
              %a{:href => "#chart", :data =>{:toggle => 'tab'}}
                = "Capital Needs Chart"
          .tab-content{:style => 'min-height: 0;'}
            .tab-pane.fade#chart
              .row
                .col-md-12
                  .chart{:id => "chart_#{@report.id}"}
            .tab-pane.fade#summary
              .row
                .col-md-12
                  = render 'capital_plan_summary'

          .col-md-12
            = render 'index_table'

= render 'index_scripts'
