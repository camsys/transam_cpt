.row
  .col-md-12
    .panel.panel-default.header-part
      .panel-heading
        .row
          .col-md-4
            %h3.panel-title
              %i.fa.fa-list
              Capital Projects
          .col-md-8
            = render 'index_actions'
      .panel-body
        - if @projects.empty?
          %p No matching capital projects found
        - else
          .col-md-12
            .chart{:id => "chart_#{@report.id}"}
          .col-md-12                
            = render 'index_table'

= render 'index_scripts'
