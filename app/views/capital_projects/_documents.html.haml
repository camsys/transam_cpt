.row
  .col-md-12{:style => 'height: 100px;overflow-y: scroll;'}
    - if @project.documents.empty?
      %p There are no documents for this project.
    - else
      = render :partial => 'shared/documents', :locals => {:documents => @project.documents}

.row
  .col-md-12
    %fieldset
      %legend Add Document
      = simple_form_for([@project, Document.new],
          :html => {:multipart => true, :class => 'form-vertical' },
          :wrapper => :vertical_form,
          :wrapper_mappings => {:check_boxes => :vertical_radio_and_checkboxes, :radio_buttons => :vertical_radio_and_checkboxes, :file => :vertical_file_input, :boolean => :vertical_boolean}) do |f|
        = f.input :document
        = f.input :description, :as => :text, :input_html => { :rows => 3 }, :placeholder => 'Enter a brief description of the document...'
        = f.submit "Add document to project", :class => 'btn btn-primary'
      