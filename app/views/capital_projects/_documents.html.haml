.row
  .col-md-12
    - if @project.documents.empty?
      %p There are no supporting documents for this project.
      = link_to "Add a document", "#", :class => "btn btn-primary"
    - else
      %table.table.table-condensed.table-striped.table-hover.table-bordered#datatable{:width => "100%"}
        %thead
          %tr
            %th Name
            %th Description
            %th Type
            %th Actions
        %tbody
          - @project.documents.each do |a|
            %tr
              %td= a.name
              %td= a.description
              %td= a.type
              %td= link_to "Download", "#", :class => "btn btn-success btn-xs"
      
      
      = render 'shared/datatable_javascript'
      