:ruby
  if highlight
    panel_type = 'panel-info'
    panel_bg = 'bg-info'
  else
    panel_type = 'panel-selected'
    panel_bg = 'bg-selected'
  end
  
.col-md-1
  .panel{:class => "#{panel_type}", :data => {:action_path => capital_projects_path(:fiscal_year => year)}}
    .panel-body.plan-summary{:class => "#{panel_bg}", :style => 'padding: 5px 0 0 0;'}
      %p.text-center <strong>#{format_as_fiscal_year(year)}</strong>
      %p.text-center
        %i.fa.fa-refresh.fa-fw
        = format_as_integer(num_replace)      
      %p.text-center
        %i.fa.fa-wrench.fa-fw
        = format_as_integer(num_rehab)
      %p.text-center
        %i.fa.fa-times-circle.fa-fw
        = format_as_integer(num_remove)
      %p.text-center
        = format_as_currency(cost)
  
  
