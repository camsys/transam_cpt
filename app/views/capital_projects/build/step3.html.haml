.row
  .col-md-3
    = dialog_tag('Overview', {:icon => "fa fa-info-circle", :class => "header-part"}) do
      = render 'new_project_instructions'

  .col-md-6
    = dialog_tag('Step 3 of 5: Project Subcategory', {:class => "header-part"}) do
      %div{:style => 'padding:20px;'}
        .row
          %p= @proxy.scope(3).description
        = form_for @proxy, :url => wizard_path, :method => :put, :role => 'form' do |f|
          .radio
            .row
              - @proxy.scope(3).children.each_slice(4) do |col|
                .col-md-6
                  - col.each do |cpt|
                    .form-group
                      %label
                        = f.radio_button :team_ali_code, cpt.id, :required => true
                        = cpt.full_name

          = link_to "Back", previous_wizard_path, :class => 'btn btn-primary'
          = submit_tag "Continue", :class => 'btn btn-primary'

  .col-md-3
    = dialog_tag('Instructions', {:icon => "fa fa-question-circle", :class => "header-part"}) do
      = render 'step3_info'

= render 'scripts'

