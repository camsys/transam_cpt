.row
  .col-md-3
    = dialog_tag('Instructions', {:icon => "fa fa-info-circle", :class => "header-part"}) do
      = render 'new_project_instructions'
      
  .col-md-6
    = dialog_tag('Step 4 of 4: Confirm selections', {:class => "header-part"}) do
      %fieldset
        %legend Project Details
        = format_field("Name", @proxy.name)
        = format_field("Fiscal Year", @proxy.fiscal_year)
        = format_field("Scope", @proxy.scope)
        = format_field("Scope Context", @proxy.scope.context)
        = format_field("Scope Type", @proxy.scope.name)
      %fieldset
        %legend Description
        = @proxy.description.html_safe
      %fieldset
        %legend Justification
        = @proxy.justification.html_safe
        
      = link_to "Go back", previous_wizard_path, :class => 'btn btn-primary'
      = link_to "Create project", next_wizard_path, :class => 'btn btn-primary'

  .col-md-3
    = dialog_tag('Info', {:icon => "fa fa-question-circle", :class => "header-part"}) do
      = render 'description_and_justification_info'

= render 'scripts'

:javascript

  // Document Ready
  $(document).ready(function(){
    $('#capital_project_proxy_description').wysihtml5();
    $('#capital_project_proxy_justification').wysihtml5();
  });
