.row
  .col-md-3
    = dialog_tag('Overview', {:icon => "fa fa-info-circle", :class => "header-part"}) do
      = render 'new_project_instructions'

  .col-md-6
    = dialog_tag('Step 1 of 5: Project Characteristics', {:class => "header-part"}) do
      %div{:style => 'padding:20px;'}
        = form_for @proxy, :url => wizard_path, :method => :put, :role => 'form' do |f|
          .form-group
            %label Project Name
            = f.text_field :name, :placeholder => "Enter a name for this project...", :class => "form-control"
          .form-group
            %label Fiscal Year
            = f.select(:fiscal_year, options_for_select(@fiscal_years, :selected => @proxy.fiscal_year), {:prompt => "Select the fiscal year"}, :class => "form-control")
          .form-group
            %label Project Type
            = f.select(:capital_project_type, options_for_select(CapitalProjectType.all, :selected => @proxy.capital_project_type), {:prompt => "Select the type of project"}, :class => "form-control")

          %label Scope
          .radio
            .form-group
              %label
                = f.radio_button :mode, 1, checked: true
                = "Bus"
            .form-group
              %label
                = f.radio_button :mode, 2
                = "Rail"
            .form-group
              %label
                = f.radio_button :mode, 3, :disabled => :true
                = "Operating Assistance"

          = submit_tag "Continue", :class => 'btn btn-primary'

  .col-md-3
    = dialog_tag('Instructions', {:icon => "fa fa-question-circle", :class => "header-part"}) do
      = render 'step1_info'

= render 'scripts'
