//TITLE
.row.text-center
  %h1
    =@draft_project.title
  .row
    =@draft_project.description
  .row
    =link_to edit_draft_project_path(@draft_project) do 
      %i.fa.fa-edit
  

// Main Content
.row
  .col-md-1
  
  //Details
  .col-md-5
    .row
      %strong 
        Project Number: 
      =@draft_project.project_number
    .row
      %strong 
        Justification: 
      =@draft_project.justification
    .row
      %strong
        Cost:
      =format_as_currency(@draft_project.cost)
    .row 
  .col-md-4

  //Scenario Details
  .col-md-2
    .well
      .row
        %h4
          =@draft_project.scenario.name
        =@draft_project.scenario.description
      .row
        %strong
          State:
        =@draft_project.scenario.state.titleize

// Project Phases
%div.row
  .col-md-12
    %h3
      ="Project Phases"
      =link_to new_draft_project_phase_url(draft_project_id: @draft_project.object_key), class: "btn btn-info btn-xs" do 
        %i.fa.fa-plus

%div.row
  %div.text-center
    .col-sm-12
      =render partial: "draft_project_phases_table", locals: {draft_project: @draft_project}