.panel.panel-default.dashboard-panel
  .panel-heading
    Capital Projects
  .panel-body

    - if current_user.has_role? :manager
      %table.table.table-hover.table-condensed
        %thead
          %tr
            %th.left Agency
            %th.center Num. Projects
            %th.center Cost
        %tbody
          - TransitOperator.where(id: @organization_list).each do |org|
            %tr{:data => {:action_path => capital_projects_path(organizaton_id: org.id)}}
              %td.left= org.to_s
              %td.center= format_as_integer(org.capital_projects.count)
              %td.center= format_as_currency(org.capital_projects.total_cost)
    - else
      %table.table.table-hover.table-condensed
        %thead
          %tr
            %th.left Name
            %th.center FY
            %th.center Num. ALIs
            %th.center Cost
        %tbody
          - CapitalProject.where(organization_id: @organization_list).each do |cp|
            %tr{:data => {:action_path => capital_project_path(cp)}}
              %td.left= cp.to_s
              %td.center= format_as_fiscal_year(cp.fy_year)
              %td.center= format_as_integer(cp.activity_line_items.count)
              %td.center= format_as_currency(cp.total_cost)