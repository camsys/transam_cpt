.col-md-3
.col-md-6
  =simple_form_for(@draft_project_phase) do |f|
    =f.input :name
    =f.input :cost
    =f.input :count, required: true
    =f.input :cost_estimated, as: :hidden, input_html: { value: false }
    =f.input :fy_year, collection:  @draft_project_phase.get_fiscal_years(Date.today-1.years,51), label: 'Fy Year'
    =f.association :team_ali_code, :collection => @draft_project_phase.draft_project.team_ali_code.children, :label_method => 'full_name', :label => 'ALI Code'
    //=f.input :justification
    =f.submit 'Save', class: 'btn btn-primary'