  =button_to 'Reject', transition_scenario_path(@scenario, transition: "reject"), method: :put, class: "btn btn-info"
%div{style: "float: right; width: auto;"}
  =button_to 'Accept', transition_scenario_path(@scenario, transition: "accept"), method: :put, class: "btn btn-success"
