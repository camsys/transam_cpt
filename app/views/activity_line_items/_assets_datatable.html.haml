- if ali.assets.empty?
  %p There are no assets for this activity line item.
-else
  %table.table.table-hover
    %thead
      %tr
        %th.center{:colspan => "3"} Asset	
        %th.center{:colspan => "3"} Condition 
        %th.center{:colspan => "3"} Replacement 
      %tr
        %th.center Tag
        %th.center Description
        %th.center Fuel
  
        %th.center Age
        %th.center Mileage
        %th.center Rating
  
        %th.center Orig.
        %th.center Curr Val.
        %th.center Est. Cost
        %th.center Sch. Cost
        - if popup
          %th
            
    %tbody
      - ali.assets.each do |a|
        %tr
          %td.left= a.asset_tag
          %td.left= a.description
          %td.left= FuelType.find(a.fuel_type_id)
  
          %td.right= a.age
          %td.right= format_as_integer(a.reported_mileage)
          %td.center= a.reported_condition_type
  
          %td.right= format_as_currency(a.cost)
          %td.right= format_as_currency(a.estimated_value)
          %td.right= format_as_currency(a.estimated_replacement_cost)
          %td.right= format_as_currency(a.scheduled_replacement_cost)
          - if popup
            %td.center
              %i.fa.fa-info-circle.text-info.popup-details{:data => {:title => "#{a.name}", :content => "#{raw render :partial => 'assets/asset_table_info_popup', :locals => {:asset => a}}"}}
              - if delete
                = link_to remove_asset_capital_project_activity_line_item_path(@project, ali, :asset => a.object_key), :method => :delete, :data => {:confirm => "Are you sure? The action cannot be undone!"}  do
                  %i.fa.fa-times-circle.action-icon.text-danger
              
