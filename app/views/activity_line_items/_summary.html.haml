.hidden-md.hidden-sm.hidden-xs
  -is_sogr = ali.capital_project.sogr?

  = format_field("Project",  link_to(ali.capital_project.project_number, ali.capital_project))
  = format_field(get_fiscal_year_label, ali.capital_project.fiscal_year)
  = format_field("Scope", ali.team_ali_code)
  = format_field("SOGR", format_as_yes_no(ali.capital_project.sogr?))
  = format_field("Type", ali.capital_project.capital_project_type)
  = format_field("Fuel Type", ali.fuel_type) if ali.fuel_type.present?
  - if !is_sogr
    = format_field("Length", format_as_integer(ali.length))
    = format_field("Replace with New?", format_as_yes_no(ali.purchased_new))
  %hr
  - if is_sogr
    = format_field("Asset Count", format_as_integer(ali.assets.count))
    = format_field("Estimated Cost", format_as_currency(ali.estimated_cost))
  -else
    = format_field("Asset Count", format_as_integer(ali.count))
    = format_field("Estimated Cost", format_as_currency(ali.cost))
  %span#expected_cost= format_field("Expected Cost", format_as_currency(ali.cost))
  %span#cost_diff
    - if is_sogr
      = format_field("Cost Difference", format_as_currency(ali.cost_difference))
    -else
      = format_field("Cost Difference", format_as_currency(0))
  -# = format_field("Funding Shortfall", format_as_currency(ali.funds_required))

.hidden-lg
  .col-sm-4
    = format_field("Project",  link_to(ali.capital_project.project_number, ali.capital_project))
    = format_field(get_fiscal_year_label, ali.capital_project.fiscal_year)
    = format_field("Scope", ali.team_ali_code)
    = format_field("SOGR", format_as_yes_no(ali.capital_project.sogr?))
    = format_field("Type", ali.capital_project.capital_project_type)
    = format_field("Fuel Type", ali.fuel_type) if ali.fuel_type.present?

  .col-sm-4
    = format_field("Asset Count", format_as_integer(ali.assets.count))
    = format_field("Estimated Cost", format_as_currency(ali.estimated_cost))
    = format_field("Expected Cost", format_as_currency(ali.cost))
    = format_field("Cost Difference", format_as_currency(ali.cost_difference))
    -# = format_field("Funding Shortfall", format_as_currency(ali.funds_required))
