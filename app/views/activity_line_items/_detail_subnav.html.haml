.row
  .col-md-12
    %nav.navbar.navbar-default{:role => 'navigation'}
      .container-fluid
        %ul.nav.navbar-nav
          %li
            = link_to "#" do
              %i.fa.fa-step-backward
              = " Previous ALI"
          %li
            = link_to "#" do
              %i.fa.fa-step-forward
              = " Next ALi"

        - if can? :create, @project
          .btn-group.navbar-right
            %button.btn.btn-info.navbar-btn.dropdown-toggle{:data => {:toggle => 'dropdown'}}
              I want to  
              %span.caret
            %ul.dropdown-menu{:role => 'menu'}
              %li
                = link_to "#" do
                  %i.fa.fa-usd.fa-fw
                  = " Add a funding request"
              %li.divider
              %li
                = link_to new_capital_project_path do
                  %i.fa.fa-copy.fa-fw
                  = " Make a copy"
              %li
                = link_to edit_capital_project_activity_line_item_path(@project, @activity_line_item) do
                  %i.fa.fa-edit.fa-fw
                  = " Modify this ALI"
              %li.divider
              %li
                = link_to capital_project_activity_line_item_path(@project, @activity_line_item), :method => :delete, :data => {:confirm => "Are you sure?. The action cannot be undone!."}  do
                  %i.fa.fa-trash-o.fa-fw
                  = " Remove this ALI"
                  